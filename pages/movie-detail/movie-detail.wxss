.container{
    background: #ffffff;
}
.session-poster{
    display:flex;
    align-items: center;
    width:100%;
    background:#e9e9e9;
}
.session-poster-poster{
    padding-top:30rpx;
    padding-bottom:40rpx;
}
.session-poster .poster{
    display:inline-block;
    margin:0 auto;
    text-align:center;
    width:300rpx;
    height: 440rpx;
}
.summary-session{
    display:flex;
    flex-direction: row;
    height:260rpx;
    align-items: center;
}
.movie-summary{
    display:flex;
    flex-direction: column;
    width:520rpx;
    margin:30rpx 30rpx;
}
.movie-summary .name{
    width:100%;
    color:#4a4a4a;
    font-size:42rpx;
    font-weight:700;
    line-height: 1.6;
    word-break: keep-all;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.movie-summary .subtype, .origin-name, .countries{
    font-size:24rpx;
    color:#9e9e9e;
}
.movie-rating{
    width:120rpx;
    height:120rpx;
    border:1px solid #9e9e9e;
    box-shadow:4rpx 4rpx 2rpx #e6e6e6;
    border-radius:6rpx;
    display:flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
}
.movie-rating .average{
    font-size:36rpx;
    font-weight:700;
}
.movie-rating .rating{
    display:flex;
    flex-direction: row;
    align-self: center;
}
.movie-rating .ratings_count{
    font-size:20rpx;
}
.wish-do-session{
    display: flex;
    align-items: center;
    flex-direction: row;
    padding:0 30px;
}
.wish-do-session .wish-btn,.wish-do-session .do-btn{
    font-size:28rpx;
    color:#de9703;
    padding:10rpx 70rpx;
    margin-right:80rpx;
    text-align: center;
    border-radius:6rpx;
    border:1px solid #de9703;
    box-sizing:border-box;
}
.wish-do-session .do-btn{
    margin-right:0rpx;
    margin-left:80rpx;
}
.desc-session,.directors-casts-session{
    display: flex;
    flex-direction: column;
    padding:0 30rpx;
    margin:20rpx 0rpx;
}
.desc-session .title,.directors-casts-session .title{
    color:#9e9e9e;
    font-size:30rpx;
    line-height: 42rpx;
}
.desc-session .desc-content{
    font-size:24rpx;
    color:#4a4a4a;
    line-height:38rpx;
    text-indent: 2em;
    text-overflow: ellipsis;
    overflow: hidden;
    display: block;
}
.directors-casts-scroll{
    width:100%;
    white-space: nowrap;
}
.directors-casts-wrapper .image{
    width:140rpx;
    height:200rpx;
    margin-right:12rpx;
}
.directors-casts-wrapper .name{
    width:140rpx;
    color:#4a4a4a;
    font-size:22rpx;
    word-break: break-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}